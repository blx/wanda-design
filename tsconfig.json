{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "esnext"
    ],
    "skipLibCheck": true,
    "sourceMap": false,
    "allowJs": false,
    "jsx": "preserve",
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/styles/*": [
        "src/styles/*"
      ],
      "@/components/*": [
        "src/components/*"
      ]
    },
    "strict": false,
    "noEmit": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "types/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
